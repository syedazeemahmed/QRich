<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmsCodeActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtText1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:text="Enter SMS Code"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtText2"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="80dp"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:text="Please Enter SMS code that has been
send to the phone +966 5x xxx xx78"
            android:textSize="20sp"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="300dp"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edNum1"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:text="1"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/my_button_bg"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edNum2"
            android:textStyle="bold"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:text="2"
            android:layout_margin="10dp"
            android:background="@drawable/my_button_bg"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edNum3"
            android:textStyle="bold"
            android:inputType="number"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:text="3 "
            android:background="@drawable/my_button_bg"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edNum4"
            android:inputType="number"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:text="4 "
            android:textSize="20sp"
            android:background="@drawable/my_button_bg"/>





    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="400dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/btnConfirm"
                android:padding="20dp"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"
                android:background="@color/colorLightGreen"

                android:text="Confirm"/>
        </LinearLayout>

</RelativeLayout>